<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="794.0" styleClass="green-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CampFront">
    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Ajouter une Campagne" textFill="#1e1e1e">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="100.0" text="Nom de la Campagne:" />
        <TextField fx:id="nomCampagneTextField" layoutX="200.0" layoutY="100.0" prefWidth="300.0" />
        <Label layoutX="50.0" layoutY="150.0" text="Date de Début:" />
        <DatePicker fx:id="dateDebutPicker" layoutX="200.0" layoutY="150.0" />
        <Label layoutX="50.0" layoutY="200.0" text="Date de Fin:" />
        <DatePicker fx:id="dateFinPicker" layoutX="200.0" layoutY="200.0" />
        <Label layoutX="50.0" layoutY="250.0" text="Créateur:" />
        <TextField fx:id="createurTextField" layoutX="200.0" layoutY="250.0" prefWidth="300.0" />
        <Label layoutX="50.0" layoutY="300.0" text="Description:" />
        <TextArea fx:id="descriptionTextArea" layoutX="200.0" layoutY="300.0" prefHeight="100.0" prefWidth="300.0" />
        <HBox layoutX="409.0" layoutY="165.0" spacing="10.0">
            <Label text="Ajouter l'affiche de la campagne:" />
            <Button onAction="#selectImage" prefHeight="30.0" prefWidth="128.0" styleClass="inner_pane" stylesheets="@style.css" text="upload" />
        </HBox>


        <Button layoutX="250.0" layoutY="430.0" onAction="#ajouterCampagne" prefHeight="26.0" prefWidth="147.0" styleClass="inner_pane" stylesheets="@style.css" text="Ajouter" />
    </children>
</AnchorPane>
