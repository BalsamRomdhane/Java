<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="405.0" prefWidth="607.0" styleClass="green-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ModifyCampagneController">
    <Label layoutX="14.0" layoutY="14.0" text="Modifier la campagne" />

    <!-- Nom de la campagne -->
    <TextField fx:id="nomCampagneTextField" layoutX="14.0" layoutY="45.0" prefWidth="180.0" promptText="Nom de la campagne" />

    <!-- Dates de début et fin -->
    <HBox layoutX="14.0" layoutY="85.0">
        <Label text="Date de début:" />
        <DatePicker fx:id="dateDebutPicker" promptText="Date de début" />
        <Label text="Date de fin:">
         <padding>
            <Insets left="10.0" />
         </padding></Label>
        <DatePicker fx:id="dateFinPicker" prefWidth="179.0" promptText="Date de fin">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" />
         </padding></DatePicker>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </HBox>

    <!-- Créateur et image -->
    <HBox layoutX="14.0" layoutY="125.0">
        <TextField fx:id="createurTextField" prefWidth="180.0" promptText="Créateur" />
        <Button onAction="#choisirImage" text="Choisir une image" />
        <ImageView fx:id="imageView" fitHeight="100" fitWidth="100">
         <HBox.margin>
            <Insets left="50.0" />
         </HBox.margin></ImageView>
    </HBox>

    <!-- Description -->
    <Label layoutX="14.0" layoutY="230.0" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="14.0" layoutY="250.0" prefHeight="70.0" prefWidth="372.0" promptText="Description" />

    <!-- Bouton de modification -->
    <Button layoutX="264.0" layoutY="330.0" onAction="#modifierCampagne" styleClass="inner_pane" stylesheets="@style.css" text="Modifier" />
   <padding>
      <Insets left="50.0" />
   </padding>
</AnchorPane>
